{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}

    {% include 'base/nav.html.twig' %}
    <h1>Tableau de bord</h1>
    <div class="container">
        <div class="row">
            <table class="table table-striped table-middle-aligned">
                <thead>
                <tr>
                    <th scope="col">Titre</th>
                    <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Commencé le</th>
                    <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Fini le</th>
                    <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for project in projects %}
                    <tr>
                        <td>{{ project.title }}</td>
                        <td>{{ project.startDate | date('d/m/Y') }}</td>
                        <td>{{ project.endedAt | date('d/m/Y') }}</td>
                        <td class="text-right">
                            <div class="item-actions">
                                <a href="{{ path('app_show_project', {id: project.id}) }}"
                                   class="btn btn-sm btn-default">
                                    <i class="fa fa-eye" aria-hidden="true"></i> Voir le projet
                                </a>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" align="center">Aucun Projet trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="row">
            <div class="col-6">
                <h2>Faits passés à confirmer</h2>
            </div>
            <div class="col-6">
                <h2>Mes projets</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <h2>Derniers projets mis à jour</h2>
            </div>
            <div class="col-6">
                <h2>Projets prévus</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <h2>Nombre de projets par statut</h2>
            </div>
            <div class="col-6">
                <h2>Derniers articles publiés</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <h2>Dernier commentaire postés</h2>
            </div>
        </div>
    </div>

    {% include 'base/footer.html.twig' %}
{% endblock %}
