{% extends 'base.html.twig' %}

{% block title %}Projet {{ project.id }}{% endblock %}

{% block body %}
    {% include 'base/nav.html.twig' %}

    <h1>Projet n°{{ project.id }}</h1>
    <h2>{{ project.title }}</h2>
    <p>{{ project.description }}</p>
    <small>crée le {{ project.startDate | date('d/m/Y') }}</small> <br>
    <small>terminé le {{ project.endedAt | date('d/m/Y') }}</small>

    <h2> Les risques</h2>
    <a href="{{ path('app_create_risk') }}"><i class="fa-solid fa-plus-circle fa-2x"></i><h3>Créer un nouveau risque</h3> </a>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">Titre</th>
            <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Commencé le</th>
            <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Fini le</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for risk in risks %}
            <tr>
                <td>{{ risk.name }}</td>
                <td>{{ risk.IdentificationDate | date('d/m/Y') }}</td>
                <td>{{ risk.ResolutionDate | date('d/m/Y') }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('app_edit_risk', {id: risk.id}) }}"
                           class="btn btn-sm btn-default">
                            <i class="fa fa-edit" aria-hidden="true"></i> Modifier le risque
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">Aucun risque trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2> Les budgets du projet</h2>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">Titre</th>
            <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Commencé le</th>
            <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Fini le</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for budget in budgets %}
            <tr>
                <td>{{ budget.initialValue }}</td>
                <td>{{ budget.consumedValue }}</td>
                <td>{{ budget.remainingBudget }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('app_edit_budget', {id: budget.id})  }}" class="btn btn-sm btn-default">
                            <i class="fa fa-edit" aria-hidden="true"></i> Modifier le budget
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun budget trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2> Les jalons</h2>
    <a href="{{ path('app_create_milestone') }}"><i class="fa-solid fa-plus-circle fa-2x"></i><h3>Créer un nouveau jalon</h3> </a>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">Titre</th>
            <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Commencé le</th>
            <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Fini le</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for milestone in milestones %}
            <tr>
                <td>{{ milestone.name }}</td>
                <td>{{ milestone.value }}</td>
                <td>{{ milestone.mandatory }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('app_edit_milestone', {id: milestone.id})  }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> Editer le jalon
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun Jalon trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
