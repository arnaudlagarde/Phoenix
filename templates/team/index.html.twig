{% extends 'base.html.twig' %}

{% block title %}Mes Equipes{% endblock %}

{% block body %}
    {% include 'base/nav.html.twig' %}

    <h1> Mes Equipes</h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.name }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('app_show_team', {id: team.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> Voir le portfolio
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">Aucun portfolio trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
