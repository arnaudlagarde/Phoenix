{% extends 'base.html.twig' %}

{% block title %}Equipe {{ team.id }}{% endblock %}

{% block body %}
    {% include 'base/nav.html.twig' %}

    <h2> Mon Equipe</h2>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">Nom d'équipe</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
        </tr>
        </thead>
        <tbody>
        {% if app.user %}
        <tr>
            <td>{{ team.name }}</td>
            <td></td>
            <td></td>
            <td class="text-right">
                <div class="item-actions">

                </div>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4">Aucune équipe trouvée</td>
        </tr>
        {% endif %}
        </tbody>
    </table>

{% endblock %}
